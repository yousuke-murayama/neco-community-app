<h2>トークルーム一覧</h2>
<h3><%= link_to 'トークルームの作成', new_room_path %></h3>

<% if @rooms.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>作成者</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.title, room %></td>
        <td><%= room.user.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
