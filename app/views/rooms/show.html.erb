<h2 class="room_title"><%= @room.title %></h2>

<div id="async_comment">
  <%= render 'comments/comments', comments: @comments %>
</div>
  
<aside class='offset-sm-8 col-sm-4'>
  <%= form_with(model: [@room, @comment]) do |f| %>
  
  <div id="async_error">
    <%= render 'layouts/error_messages', model: @comment %>
  </div>
    <div class='form-group mt-0'>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.text_area :content, class: 'form-control async_text', row: 5 %>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
    <%= link_to '戻る', rooms_path, class: 'btn btn-secondary' %>
  <% end %>
</aside>
