<% if current_user.cooperating?(wanted) %>
  <%= form_with(model: current_user.cooperations.find_by(wanted_id: wanted.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :wanted_id, wanted.id %>
    <%= f.submit "捜査協力中", class: "btn btn-success" %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.cooperations.build, local: true) do |f| %>
    <%= hidden_field_tag :wanted_id, wanted.id %>
    <%= f.submit "捜査に協力する", class: "btn btn-outline-success" %>
  <% end %>
<% end %>